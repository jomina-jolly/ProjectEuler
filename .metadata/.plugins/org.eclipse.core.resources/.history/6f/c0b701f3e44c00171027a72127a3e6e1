def sum_of_n(a,m,d):
    n=((m-a)/d)+1
    print 'number of terms=',n
    total= (n/2)*m+a
    print 'formula result=',total
    return total

def sum_with_loop(m,d):
    result= 0
    for i in range(m):
        if i!=1 and i%d==0:
            result+=i
    print 'loop result',result 
    return result

print sum_with_loop(1000,5)-sum_of_n(0,995,5)